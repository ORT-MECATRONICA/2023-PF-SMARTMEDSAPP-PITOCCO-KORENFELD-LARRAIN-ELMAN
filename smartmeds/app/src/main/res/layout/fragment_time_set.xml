<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoondulado"
    tools:context=".fragments.HomeFragment">

    <EditText
        android:id="@+id/horaSeleccionada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:clickable="false"
        android:focusable="false"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17000002" />

    <TextView
        android:id="@+id/hourInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione la hora:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <ImageView
        android:id="@+id/smartmedsLogo3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/smartmedslogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardHome"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginHorizontal="30dp"

        android:layout_marginVertical="130dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/logosimplesmartmeds"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.060000002" />

        <TextView
            android:id="@+id/lunesText"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="L"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:layout_marginLeft="11dp"
            android:textSize="30dp"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/martesText"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="M"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:layout_marginLeft="59dp"
            android:textSize="30dp"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/miercolesText"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="M"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:layout_marginLeft="107dp"
            android:textSize="30dp"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/juevesText"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="J"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:layout_marginLeft="155dp"
            android:textSize="30dp"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/viernesText"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="V"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:layout_marginLeft="203dp"
            android:textSize="30dp"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/sabadoText"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="S"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:layout_marginLeft="251dp"
            android:textSize="30dp"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/domingoText"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="D"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:layout_marginLeft="299dp"
            android:textSize="30dp"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/plainInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Escriba el nombre de su pastilla:" />

        <EditText
            android:id="@+id/pastillaInsertada"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/baseline_medication_24"
            android:ems="10"
            android:hint=" Pastilla"
            android:textStyle="bold"
            android:textSize="13dp"
            android:inputType="textPersonName"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/smartmedsLogo"
            app:layout_constraintVertical_bias="0.19999999" />

        <TextView
            android:id="@+id/plainInsertType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="¿En que posicion colocara la pastilla?" />

        <EditText
            android:id="@+id/numeroPastillero"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/baseline_dialpad_24"
            android:ems="10"
            android:hint=""
            android:textStyle="bold"
            android:textSize="13dp"
            android:inputType="number"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/smartmedsLogo"
            app:layout_constraintVertical_bias="0.19999999" />

        <TextView
            android:id="@+id/plainInsertDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="215dp"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="¿Que dias tomara la pastilla?" />


    </androidx.cardview.widget.CardView>

    <com.google.android.material.chip.Chip
        android:id="@+id/chipAtras"
        android:layout_width="118dp"
        android:layout_height="70dp"
        android:text="Atras"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardHome"
        app:layout_constraintVertical_bias="0.8" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipGuardar"
        android:layout_width="118dp"
        android:layout_height="70dp"
        android:text="Guardar"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardHome"
        app:layout_constraintVertical_bias="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>

