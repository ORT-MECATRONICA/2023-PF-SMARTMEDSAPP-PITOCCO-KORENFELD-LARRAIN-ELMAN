<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Frente"
    android:background="@drawable/fondoondulado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <ImageView
        android:id="@+id/smartmedsLogo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/smartmedslogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardRegister"
        android:layout_width="340dp"
        android:layout_height="340dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/logosimplesmartmeds"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.060000002" />

        <TextView
            android:id="@+id/textoEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="81dp"

            android:text="Ingrese su email:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textoClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="170dp"

            android:text="Ingrese su contrase単a:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textoClaveRepetir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="250dp"

            android:text="Repita su contrase単a:"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/emailRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="105dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/baseline_email_24"
            android:ems="10"
            android:hint=" email"
            android:inputType="textEmailAddress"

            android:padding="8dp" />

        <EditText
            android:id="@+id/claveRegister"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="195dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/baseline_password_24"
            android:ems="10"
            android:hint=" Contrase単a"
            android:inputType="textPassword"
            android:padding="8dp" />

        <EditText
            android:id="@+id/claveRegisterRepetir"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="275dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/baseline_password_24"
            android:ems="10"
            android:hint=" Repetir contrase単a"
            android:inputType="textPassword"
            android:padding="8dp" />

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/botonRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="70dp"
        android:backgroundTint="#599BFE"
        android:text="crear cuenta"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>