<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardHome"



        android:layout_width="match_parent"
        android:layout_height="120dp"

        app:cardCornerRadius="30dp"
        app:cardElevation="90dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="45dp">

        <TextView
            android:id="@+id/horarioSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:layout_marginLeft="10dp"
            android:text="00:00"
            android:textSize="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="73dp" />

        <TextView
            android:id="@+id/pastilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginVertical="0dp"
            android:text="Pastilla:"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="192dp"
            android:layout_marginTop="30dp"
            android:text="Dias Habilitados"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pastilla"
            app:layout_constraintVertical_bias="0.00999999" />

        <TextView
            android:id="@+id/lunes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="60dp"
            android:layout_marginLeft="207dp"
            android:text="L"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/horarioSelected"
            app:layout_constraintTop_toBottomOf="@+id/dias" />

        <TextView
            android:id="@+id/martes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="217dp"
            android:layout_marginTop="60dp"
            android:text="M"
            android:textStyle="bold"

            app:layout_constraintTop_toBottomOf="@+id/dias" />

        <TextView
            android:id="@+id/miercoles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="231dp"
            android:layout_marginTop="60dp"
            android:text="M"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/martes"
            app:layout_constraintTop_toBottomOf="@+id/dias" />

        <TextView
            android:id="@+id/jueves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="244dp"
            android:layout_marginTop="60dp"
            android:text="J"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/miercoles"
            app:layout_constraintTop_toBottomOf="@+id/dias" />

        <TextView
            android:id="@+id/viernes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="253dp"
            android:layout_marginTop="60dp"
            android:text="V"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/jueves"
            app:layout_constraintTop_toBottomOf="@+id/dias" />

        <TextView
            android:id="@+id/sabado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="263dp"
            android:layout_marginTop="60dp"
            android:text="S"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/viernes"
            app:layout_constraintTop_toBottomOf="@+id/dias" />

        <TextView
            android:id="@+id/domingo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="273dp"
            android:layout_marginTop="60dp"
            android:text="D"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/sabado"
            app:layout_constraintTop_toBottomOf="@+id/dias" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>